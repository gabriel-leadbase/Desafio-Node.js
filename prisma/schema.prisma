// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VENDEDOR
}

model User {
  id                 String               @id @default(uuid())
  name               String
  cpf                String               @unique
  role               Role                 @default(VENDEDOR)
  password           String
  created_at         DateTime             @default(now())
  updated_at         DateTime?
  PermissionsOnUsers PermissionsOnUsers[]

  @@map("users")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  valor       Decimal
  description String
  created_at  DateTime  @default(now())
  updated_at  DateTime?

  @@map("procucts")
}

model Permissions {
  id                 String               @id @default(uuid())
  name               String               @unique
  created_at         DateTime             @default(now())
  updated_at         DateTime?
  PermissionsOnUsers PermissionsOnUsers[]

  @@map("permissions")
}

model PermissionsOnUsers {
  user           User        @relation(fields: [user_id], references: [id])
  user_id        String
  permission     Permissions @relation(fields: [permissions_id], references: [id])
  permissions_id String
  created_at     DateTime    @default(now())

  @@id([user_id, permissions_id])
}
